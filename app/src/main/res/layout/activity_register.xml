<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/bg_color"
    >

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="@color/bg_color"
        tools:context=".screens.LoginActivity">


        <TextView
            android:id="@+id/loginTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Register"
            android:textColor="@color/primary_color"
            android:textSize="48dp"
            android:fontFamily="@font/roboto_bold"
            android:textStyle="bold" />

        <EditText
            android:layout_marginTop="30dp"
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/text_field_border"
            android:ems="10"
            android:inputType="text"
            android:textColor="@color/primary_color"
            android:textColorHint="@color/primary_color"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:hint="Name"
            android:drawableLeft="@drawable/personsvg"/>

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/primary_color"
            android:textColorHint="@color/primary_color"
            android:ems="10"
            android:background="@drawable/text_field_border"
            android:hint="Email"
            android:drawableLeft="@drawable/emailsvg"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"
            android:inputType="text" />

        <EditText
            android:id="@+id/phoneEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:textColor="@color/primary_color"
            android:textColorHint="@color/primary_color"
            android:background="@drawable/text_field_border"
            android:hint="Phone"
            android:drawableLeft="@drawable/phonesvg"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"
            android:inputType="number" />

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:textColor="@color/primary_color"
            android:textColorHint="@color/primary_color"
            android:background="@drawable/text_field_border"
            android:hint="Password"
            android:drawableLeft="@drawable/passwordsvg"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"
            android:inputType="text" />

        <EditText
            android:id="@+id/confirmPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:textColor="@color/primary_color"
            android:textColorHint="@color/primary_color"
            android:background="@drawable/text_field_border"
            android:hint="Confirm Password"
            android:drawableLeft="@drawable/passwordsvg"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"
            android:inputType="text" />

        <Button
            style="?android:attr/absListViewStyle"
            android:id="@+id/registerButton"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/primary_color"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textColor="#FFF"
            android:text="Register" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/registerTextView"
                android:layout_width="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="Already have an account?" />

            <Button
                style="?android:attr/absListViewStyle"
                android:id="@+id/registerActivityLoginButton"
                android:layout_gravity="top"
                android:backgroundTint="@color/bg_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_color"
                android:paddingLeft="1dp"
                android:text="Login" />
        </LinearLayout>






    </LinearLayout>

</ScrollView>

