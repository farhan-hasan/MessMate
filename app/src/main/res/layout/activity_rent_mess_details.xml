<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".screens.MealRequestActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/rentMessDetailsToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_color"
        android:elevation="4dp"
        android:popupTheme="@style/ThemeOverlay.AppCompat"
        android:theme="@style/CustomToolbarTheme"
        app:title="MessMate"
        app:titleTextAppearance="@style/CustomToolbarTitle"
        app:titleTextColor="#FFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="670dp"
        android:padding="20dp"
        android:background="@color/bg_color"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mess Name"
                android:textColor="@color/primary_color"
                android:fontFamily="@font/roboto_bold"
                android:textSize="32dp"
                />

            <Button
                style="?android:attr/absListViewStyle"
                android:id="@+id/residentAddButton"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/primary_color"
                android:layout_width="100dp"
                android:textColor="#FFF"
                android:layout_height="50dp"
                android:text="Add" />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:scrollbars="vertical"
            android:id="@+id/rentResidentListRecyclerView"/>


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#FFF"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">



            <TextView
                android:id="@+id/totalCollectionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Collection"
                android:textColor="@color/primary_color"
                android:fontFamily="@font/roboto_bold"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/collectedAmoundTextView"
                android:paddingTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12000/20000 BDT"
                android:layout_below="@+id/totalCollectionTextView"
                android:textColor="@color/primary_color"
                android:fontFamily="@font/roboto_regular"
                android:textSize="16dp"
                />


            <Button
                android:id="@+id/collectionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Close Collection"
                android:backgroundTint="@color/primary_color"
                android:textColor="#FFF"
                android:fontFamily="@font/roboto_regular"
                android:textSize="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="2dp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>



