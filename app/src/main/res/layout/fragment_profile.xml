<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    tools:context=".fragments.RentFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginTop="20dp"
                    android:id="@+id/profileImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/residentpersonsvg"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    />

                <EditText
                    android:id="@+id/nameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/text_field_border"
                    android:drawableLeft="@drawable/personsvg"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Name"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/primary_color"
                    android:textColorHint="@color/primary_color" />

                <EditText
                    android:id="@+id/phoneEditText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/text_field_border"
                    android:drawableLeft="@drawable/phonesvg"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Phone"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColor="@color/primary_color"
                    android:textColorHint="@color/primary_color" />

                <EditText
                    android:enabled="false"
                    android:id="@+id/profileEmailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/text_field_border"
                    android:drawableLeft="@drawable/emailsvg"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Email"
                    android:inputType="none"
                    android:padding="10dp"
                    android:textColor="#808080"
                    android:textColorHint="#808080" />

                <EditText
                    android:id="@+id/oldPasswordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/text_field_border"
                    android:drawableLeft="@drawable/passwordsvg"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Old Password"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/primary_color"
                    android:textColorHint="@color/primary_color" />

                <EditText
                    android:id="@+id/newPasswordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/text_field_border"
                    android:drawableLeft="@drawable/passwordsvg"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="New Password"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/primary_color"
                    android:textColorHint="@color/primary_color" />

                <EditText
                    android:id="@+id/NewconfirmPasswordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/text_field_border"
                    android:drawableLeft="@drawable/passwordsvg"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Confirm New Password"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/primary_color"
                    android:textColorHint="@color/primary_color" />

                <Button
                    android:id="@+id/profileSaveButton"
                    style="?android:attr/absListViewStyle"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/primary_color"
                    android:text="Update Profile"
                    android:textColor="#FFF" />

                <Button
                    android:id="@+id/profileUpdatePassButton"
                    style="?android:attr/absListViewStyle"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/primary_color"
                    android:text="Update Password"
                    android:textColor="#FFF" />


            </LinearLayout>

        </ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/totalamountfloatbutton"
            style="?android:attr/absListViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/cashsvg"
            android:scaleType="center"
            android:clickable="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            app:tint="#FFF"
            android:backgroundTint="@color/primary_color"
            />


    </RelativeLayout>




</FrameLayout>