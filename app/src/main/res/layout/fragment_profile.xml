<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.RentFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Profile"
            android:layout_marginTop="20dp"
            android:textSize="32dp"
            android:textColor="@color/primary_color"
            android:fontFamily="@font/roboto_bold"
            />

        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/text_field_border"
            android:ems="10"
            android:inputType="text"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:hint="Name"
            android:drawableLeft="@drawable/personsvg"/>

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:background="@drawable/text_field_border"
            android:hint="Email"
            android:drawableLeft="@drawable/emailsvg"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"
            android:inputType="text" />

        <EditText
            android:id="@+id/phoneEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:background="@drawable/text_field_border"
            android:hint="Phone"
            android:drawableLeft="@drawable/phonesvg"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"
            android:inputType="number" />

        <EditText
            android:id="@+id/oldPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:background="@drawable/text_field_border"
            android:hint="Old Password"
            android:drawableLeft="@drawable/passwordsvg"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"
            android:inputType="text" />

        <EditText
            android:id="@+id/newPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:background="@drawable/text_field_border"
            android:hint="New Password"
            android:drawableLeft="@drawable/passwordsvg"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/NewconfirmPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:background="@drawable/text_field_border"
            android:hint="Confirm New Password"
            android:drawableLeft="@drawable/passwordsvg"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"
            android:inputType="textPassword" />

        <Button
            style="?android:attr/absListViewStyle"
            android:id="@+id/profileSaveButton"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/primary_color"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Save" />



    </LinearLayout>


</FrameLayout>