<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    app:ignore="NamespaceTypo">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:backgroundTint="#FFF"
        card_view:cardCornerRadius="8dp"
        android:id="@+id/resident_card_view"
        card_view:cardElevation="4dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <RelativeLayout
                android:id="@+id/residentCardLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/mealResidentImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="30dp"
                    android:src="@drawable/residentpersonsvg"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_marginTop="1dp"
                    android:id="@+id/mealResidentNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resident Name"
                    android:textColor="@color/primary_color"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_toEndOf="@id/mealResidentImage"
                    android:layout_alignTop="@id/mealResidentImage"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/mealResidentBreakfastTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Breakfast: "
                    android:textColor="@color/primary_color"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="14sp"
                    android:layout_below="@id/mealResidentNameTextView"
                    android:layout_alignStart="@id/mealResidentNameTextView" />

                <TextView
                    android:id="@+id/mealResidentBreakfastAmountTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="20(1000BDT)"
                    android:textColor="@color/primary_color"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="14sp"
                    android:layout_below="@id/mealResidentNameTextView"
                    android:layout_toEndOf="@+id/mealResidentBreakfastTextView" />


                <TextView
                    android:id="@+id/mealResidentLunchTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Lunch: "
                    android:textColor="@color/primary_color"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="14sp"
                    android:layout_below="@id/mealResidentBreakfastTextView"
                    android:layout_alignStart="@id/mealResidentNameTextView" />

                <TextView
                    android:id="@+id/mealResidentLunchAmountTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="20(1000BDT)"
                    android:textColor="@color/primary_color"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="14sp"
                    android:layout_below="@id/mealResidentBreakfastTextView"
                    android:layout_toEndOf="@+id/mealResidentBreakfastTextView" />

                <TextView
                    android:id="@+id/mealResidentDinnerTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Dinner: "
                    android:textColor="@color/primary_color"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="14sp"
                    android:layout_below="@id/mealResidentLunchTextView"
                    android:layout_alignStart="@id/mealResidentNameTextView" />

                <TextView
                    android:id="@+id/mealResidentDinnerAmountTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="20(1000BDT)"
                    android:textColor="@color/primary_color"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="14sp"
                    android:layout_below="@id/mealResidentLunchTextView"
                    android:layout_toEndOf="@+id/mealResidentBreakfastTextView" />


            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>



