<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/bg_color</item>
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item> <!-- Requires a custom font in res/font directory -->
    </style>

    <style name="CustomToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">#FFFFFF</item> <!-- White color for the back button -->
    </style>

    <style name="CustomBottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">#fff</item>
        <item name="itemTextColor">#fff</item>
        <item name="backgroundTint">@color/primary_color</item>
    </style>

    <!-- Custom AlertDialog style -->
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
<!--        <item name="android:background">@drawable/custom_alertdialog_background</item>-->
        <item name="android:textColorPrimary">@color/primary_color</item>
        <item name="android:textColorSecondary">@color/bg_color</item>
<!--        <item name="android:buttonStyle">@style/CustomDialogButton</item>-->
    </style>

